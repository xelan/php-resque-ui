{% set page = {
    title: 'Queues',
    description: 'Resque WebUI queues'
} %}

{% extends 'AndarisResqueWebUiBundle::layout.html.twig' %}

{% block content %}
    <div class="col-lg-12">
        <h1>Queues</h1>

        <table class="table table-striped table-responsive">
            <tr>
                <th>Name</th>
                <th>Queued</th>
                <th>Delayed</th>
                <th>Processed</th>
                <th>Cancelled</th>
                <th>Failed</th>
                <th>Total</th>
            </tr>
            {% for queue in queues %}
            <tr>
                <td>{{ queue.name }}</td>
                <td>{{ queue.jobsQueued }}</td>
                <td>{{ queue.jobsDelayed }}</td>
                <td>{{ queue.jobsProcessed }}</td>
                <td>{{ queue.jobsCancelled }}</td>
                <td>{{ queue.jobsFailed }}</td>
                <td>{{ queue.jobsTotal }}</td>
            </tr>
            {% else %}
            <tr>
                <td colspan="10">No queues found.</td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
