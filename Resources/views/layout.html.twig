<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Team ALPS" />

    <title>{% if page.title is defined %} {{ page.title }} - {% endif %}PHP-Resque Web UI</title>

    {% block stylesheets %}
    <link href="{{ asset('bundles/andarisresquewebui/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/andarisresquewebui/css/supernice.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/andarisresquewebui/css/sticky-footer.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/andarisresquewebui/css/style.css') }}" rel="stylesheet" />
    {% endblock %}
  </head>

  {% set route = app.request.get('_route') %}
  <body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
          <a class="navbar-brand" href="{{ path('andaris_resque_web_ui_home') }}">
            <img src="{{ asset('bundles/andarisresquewebui/images/logo_small.png') }}" style="position:relative; top: -10px;" alt="" />
          </a>

        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="{{ route == 'andaris_resque_web_ui_home' ? 'active' }}">
                <a href="{{ path('andaris_resque_web_ui_home') }}">Home</a>
            </li>

            <li class="{{ route == 'andaris_resque_web_ui_workers' ? 'active' }}">
                <a href="{{ path('andaris_resque_web_ui_workers') }}">Workers</a>
            </li>

            <li class="{{ route == 'andaris_resque_web_ui_queues' ? 'active' }}">
                <a href="{{ path('andaris_resque_web_ui_queues') }}">Queues</a>
            </li>

            <li class="{{ route == 'andaris_resque_web_ui_jobs' ? 'active' }}">
                <a href="{{ path('andaris_resque_web_ui_jobs') }}">Jobs</a>
            </li>

          </ul>

          {% if app.user %}
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="glyphicon glyphicon-user active"></i> {{ app.user.username}}<span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="{{ logout_url() }}">Logout</a></li>
              </ul>
            </li>
          </ul>
          {% endif %}

        </div>
      </div>
    </nav>


    <div class="container">
    {% block content %}{% endblock %}
    </div>

    <footer class="footer">
      <div class="container">
        <p>
            PHP-Resque Web UI Â© 2017 Team ALPS |
            <a href="{{ path('andaris_resque_web_ui_about') }}">About</a>
        </p>
      </div>
    </footer>


    {% block javascripts %}
    <script src="{{ asset('bundles/andarisresquewebui/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/andarisresquewebui/js/bootstrap.min.js') }}"></script>
    {% endblock %}

  </body>
</html>
